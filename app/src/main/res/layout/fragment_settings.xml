<LinearLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical" android:layout_margin="@dimen/activity_horizontal_margin">

    <Switch
        android:text="@string/notify_me_of_nearby_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sw_notify_nearby" />

    <Switch
        android:text="@string/invisible_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sw_invisible_mode"
        android:layout_marginTop="@dimen/settings_item_margin" />

    <Button
        android:text="@string/my_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_my_profile"
        android:layout_marginTop="@dimen/settings_section_vertical_margin" />

    <Button
        android:text="@string/contact_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_contact_us"
        android:layout_marginTop="@dimen/settings_section_vertical_margin" />

    <Button
        android:text="@string/about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_about_us" />

    <Button
        android:text="@string/log_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_logout"
        android:textColor="@android:color/holo_red_dark"
        android:elevation="0dp"
        android:layout_marginTop="@dimen/settings_section_vertical_margin" />
</LinearLayout>