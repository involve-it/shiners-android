<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.involveit.shiners">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.involveit.shiners.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.auth.Splash"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDjWyZDlkMeu2NLTCODcVX19VAlTnfLnB0" />

        <activity
            android:name="com.involveit.shiners.activities.Home"
            android:label="Главное" />
        <activity
            android:name=".activities.auth.LogIn"
            android:label="Авторизация"
            android:theme="@style/AppThemeAuth" />
        <activity
            android:name=".activities.auth.Register"
            android:label="Регистрация"
            android:theme="@style/AppThemeAuth" />

        <service
            android:name="com.involveit.shiners.services.LocationService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="com.involveit.shiners.activities.PostDetails"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.involveit.shiners.activities.newpost.NewPostsText"
            android:label="New Posts" />
        <activity
            android:name="com.involveit.shiners.activities.newpost.NewPostsLocation"
            android:label="Where is it located?" />
        <activity
            android:name="com.involveit.shiners.activities.newpost.NewPostsDate"
            android:label="When does it expire?" />
        <activity
            android:name="com.involveit.shiners.activities.newpost.NewPostsPhoto"
            android:label="How does it look like?" />

        <service
            android:name="com.amazonaws.mobileconnectors.s3.transferutility.TransferService"
            android:enabled="true" />
    </application>

</manifest>