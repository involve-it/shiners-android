<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ListView android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"  android:layout_width="match_parent"
        android:id="@+id/dialogs_list"
        android:choiceMode="singleChoice"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/dialogs_list_empty_view" android:textAlignment="center"
        android:layout_margin="@dimen/list_empty_view_top_margin"
        android:text="@string/dialogs_list_empty_view_text"/>
</LinearLayout>
